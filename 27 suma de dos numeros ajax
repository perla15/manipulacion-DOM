	<div class="super_div">
		<h1>Aqu√≠ no hay nada</h1>
		<center>
			<input type="text" style="width: 20%;height: 40px;" name="" id="primer_numero" value="" placeholder="">
			<input type="text" style="width: 20%;height: 40px;" name="" id="segundo_numero" value="" placeholder="">
			<br>
			<button> suma dos numeros </button>
		</center>
		<h1 id="suma">  </h1>
	</div>

  
	<script type="text/javascript" src="assets/js/jquery-3.5.1.min.js"></script>
	<script type="text/javascript"> 
		 
		$(document).ready( () =>{
			$("button").click( ()=>{

				var num1 = $("#primer_numero").val()
				var num2 = $("#segundo_numero").val()

				$.ajax({
					url:'proceso_suma_numeros.php',
					data: { uno:num1,
						  	dos:num2 },
					type:"POST",
					dataType:'text',
					success:function(r){
						$("#suma").text(r) 
					}

				})
			} )
		})

	</script>
	 

</script>
